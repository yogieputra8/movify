<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMovie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_constraintLeft_toRightOf="@+id/ivMovie"
            android:layout_marginLeft="8dp"
            android:layout_constraintTop_toTopOf="@+id/ivMovie"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="8dp"
            android:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginLeft="0dp"
            android:layout_constraintLeft_toLeftOf="@+id/tvTitle"
            android:layout_marginRight="8dp"
            android:layout_constraintRight_toRightOf="parent"
            android:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="8dp"
            android:layout_constraintTop_toBottomOf="@+id/tvReleaseDate"
            android:layout_marginLeft="0dp"
            android:layout_constraintLeft_toLeftOf="@+id/tvReleaseDate"
            android:layout_marginRight="8dp"
            android:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>